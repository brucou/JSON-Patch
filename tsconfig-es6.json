{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib/",
    "module": "ES6",
    "noEmitHelpers": false,
    "declaration": true,
    "removeComments": false,
    /* emitting `use strict` made PuppetJS break */
    "allowSyntheticDefaultImports": true,
    "noImplicitUseStrict": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
